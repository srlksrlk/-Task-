<!-- ここに記述するのは、bodyの中身だけでよい -->
<h1 class="clearText">@Task!</h1>
<div class="col-xs-offset-9 col-sm-offset-9 col-md-offset-9">
<%= link_to "新規タスク作成", new_project_path, {:class => 'btn btn-primary'} %>
</div>
<table class="table table-bordered">
		<tr>
		<th>やること
		<th>編集
		<th>削除

		<% @projects.each do |project| %>　
			<tr>
				<td><%= link_to project.title, project_path(project.id),:class => 'btn btn-default' %>　　
						(<%= project.tasks.count%>)</td>
				<td><%= link_to "編集", edit_project_path(project.id), {:class => 'btn btn-info'} %></td>
				<td><%= link_to "削除", project_path(project.id), :class => 'btn btn-danger', method: :delete,
								data: {confirm: "削除してよろしいですか？"} %></td>
			</tr>
		<% end %>
</table>
